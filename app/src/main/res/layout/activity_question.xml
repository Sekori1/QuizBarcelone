<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Question">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/top_menu_question"
        android:background="@color/colorPrimaryDark"
        app:navigationIcon="@drawable/arrow_left_white"
        app:title="Question"
        app:titleTextColor="@color/white">

        <TextView
            android:id="@+id/question_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <!--android:layout_alignParentTop="true"-->
        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            app:fontFamily="@font/rubik_regular"
            android:layout_margin="5dp"
            android:padding="15dp"
            android:textSize="16sp"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/imageDesc"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:maxHeight="250dp"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            android:text="...?"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:fontFamily="@font/rubik_regular"
            android:padding="10dp"
            android:background="@drawable/desc_background"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/answer_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/answer_button"
            android:padding="3dp"
            android:textColor="@color/colorPrimary"
            app:fontFamily="@font/rubik_regular"
            android:textSize="15sp" />

        <Button
            android:id="@+id/answer_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/answer_button"
            android:padding="3dp"
            android:textColor="@color/colorPrimary"
            app:fontFamily="@font/rubik_regular"
            android:textSize="15sp" />

        <Button
            android:id="@+id/answer_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/answer_button"
            android:padding="3dp"
            android:textColor="@color/colorPrimary"
            app:fontFamily="@font/rubik_regular"
            android:textSize="15sp" />

        <Button
            android:id="@+id/answer_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/answer_button"
            android:padding="3dp"
            android:textColor="@color/colorPrimary"
            app:fontFamily="@font/rubik_regular"
            android:textSize="15sp" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>